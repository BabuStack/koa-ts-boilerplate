{
  "name": "koa-ts-boilerplate",
  "version": "1.8.0",
  "description": "API REST using NodeJS and KOA framework, typescript. Middlewares JWT, CORS, Winston Logger. Swagger API docs",
  "main": "dist/server.js",
  "scripts": {
    "watch-server": "nodemon",
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.ts\" --quiet --fix",
    "serve": "node dist/server.js",
    "build": "npm run lint && npm run build-ts",
    "start": "npm run serve",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "commit": "cz"
  },
  "author": "BabuStack",
  "license": "MIT",
  "homepage": "https://github.com/BabuStack/koa-ts-boilerplate#readme",
  "keywords": [
    "typescript",
    "koa",
    "koa2",
    "jwt",
    "winston",
    "boilerplate",
    "typeORM",
    "class-validator",
    "sql",
    "api rest",
    "heroku",
    "cors",
    "github actions"
  ],
  "repository": "git@github.com:BabuStack/koa-ts-boilerplate.git",
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-angular": "^16.2.1",
    "@types/dotenv-safe": "^8.1.2",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "2.13.1",
    "@types/koa__cors": "^3.0.2",
    "@types/koa__router": "^8.0.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^6.0.2",
    "@types/koa-passport": "^4.0.3",
    "@types/node": "^14.14.37",
    "@types/passport": "^1.0.7",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.23.0",
    "husky": "^7.0.0",
    "jest": "^26.6.3",
    "jest-serial-runner": "^1.2.0",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "async-local-storage": "^2.3.1",
    "class-validator": "^0.13.1",
    "cron": "^1.8.2",
    "dotenv-safe": "^8.2.0",
    "ip": "^1.1.5",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^4.0.0",
    "koa-passport": "^4.1.4",
    "koa-swagger-decorator": "^1.6.4",
    "mongodb": "^4.4.0",
    "passport": "^0.5.2",
    "passport-google-oauth20": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/__tests__/*.test.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
